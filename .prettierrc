{
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 3
            }
        },
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
